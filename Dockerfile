FROM php:8.1-fpm

WORKDIR /var/www

RUN apt-get update && apt-get install -y \
    build-essential \
    libpng-dev \
    libjpeg62-turbo-dev \
    libfreetype6-dev \
    locales \
    zip \
    jpegoptim optipng pngquant gifsicle \
    vim \
    unzip \
    git \
    libonig-dev \ 
    curl

RUN docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd

COPY . .

CMD ["php-fpm"]

